
@model InventoryManagement.Models.Inventory

@{
    ViewBag.Title = "GetInventoryById";
}

<h2>GetInventoryById</h2>

@if(Model != null)
{
<h3>@Model.Name</h3>
<h4>Number of Units : @Model.NoUnits</h4>
<h4>Order Level : @Model.OrderLevel</h4>
<h4>price : @Model.Price</h4>
}
else
{
    <h3 style="color: red">Invalid Id</h3>
}

<br/>
<div>
    @Html.ActionLink("Back to List", "GetInventory")
</div>